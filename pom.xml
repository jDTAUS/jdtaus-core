<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <parent>
    <artifactId>jdtaus-core</artifactId>
    <groupId>org.jdtaus</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>jdtaus-core-runtime</artifactId>
  <groupId>org.jdtaus.runtime</groupId>
  <name>jDTAUS Core Runtime</name>
  <version>1.0-SNAPSHOT</version>
  <description>jDTAUS core runtime classes and interfaces.</description>
  <dependencies>
    <dependency>
      <groupId>org.jdtaus.common</groupId>
      <artifactId>jdtaus-core-api</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <scm>
    <connection>scm:svn:https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-core-runtime/trunk</connection>
    <developerConnection>scm:svn:https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-core-runtime/trunk</developerConnection>
    <url>http://svn.sourceforge.net/viewcvs.cgi/jdtaus/jdtaus-core/jdtaus-core-runtime/trunk</url>
  </scm>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <filtering>false</filtering>
        <directory>src/site/resources</directory>
        <targetPath>org/jdtaus/runtime/container/xml</targetPath>
        <includes>
          <include>*.xsd</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-core-runtime/tags</tagBase>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jdtaus.mojo</groupId>
        <artifactId>jdtaus-resource-mojo</artifactId>
        <executions>
          <execution>
            <id>default</id>
            <goals>
              <goal>generate-bundles</goal>
            </goals>
            <configuration>
              <bundles>
                <bundle>org.jdtaus.runtime.container.DefaultModel</bundle>
              </bundles>
              <encoding>UTF-8</encoding>
              <locale>en</locale>
              <javadoc>false</javadoc>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <aggregate>false</aggregate>
          <author>true</author>
          <charset>UTF-8</charset>
          <docencoding>UTF-8</docencoding>
          <encoding>UTF-8</encoding>
          <doctitle>${pom.name} Specification ${pom.version}</doctitle>
          <linksource>true</linksource>
          <nodeprecated>true</nodeprecated>
          <quiet>true</quiet>
          <verbose>false</verbose>
          <serialwarn>true</serialwarn>
          <showPackage>false</showPackage>
          <showPrivate>false</showPrivate>
          <showProtected>true</showProtected>
          <windowtitle>${pom.name} Specification ${pom.version}</windowtitle>
          <tag>pre:a:Preconditions:</tag>
          <tag>post:a:Guaranties:</tag>
          <links>
            <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
            <link>http://www.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-api/apidocs</link>
          </links>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <sourceEncoding>UTF-8</sourceEncoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>
