<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>jdtaus-core</artifactId>
    <groupId>org.jdtaus</groupId>
    <version>1.6</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jdtaus.core</groupId>
  <artifactId>jdtaus-core-runtime</artifactId>
  <name>jDTAUS Core Reference Implementation</name>
  <version>1.5-1</version>
  <description>jDTAUS core reference implementation.</description>
  <packaging>jar</packaging>
  <scm>
    <connection>scm:svn:https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-core-runtime/tags/jdtaus-core-runtime-1.5-1</connection>
    <developerConnection>scm:svn:https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-core-runtime/tags/jdtaus-core-runtime-1.5-1</developerConnection>
    <url>http://jdtaus.svn.sourceforge.net/viewvc/jdtaus/jdtaus-core/jdtaus-core-runtime/tags/jdtaus-core-runtime-1.5-1</url>
  </scm>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-core-runtime/tags</tagBase>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.jdtaus.core.container</groupId>
            <artifactId>jdtaus-core-client-container</artifactId>
            <version>[1.5,)</version>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
        <configuration>
          <outputEncoding>UTF-8</outputEncoding>
          <inputEncoding>UTF-8</inputEncoding>
          <locales>en</locales>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jdtaus.mojo</groupId>
        <artifactId>jdtaus-container-mojo</artifactId>
        <version>3.0</version>
        <dependencies>
          <dependency>
            <artifactId>jdtaus-core-client-container</artifactId>
            <groupId>org.jdtaus.core.container</groupId>
            <version>[1.5,)</version>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>verify</id>
            <goals>
              <goal>verify-jar</goal>
            </goals>
          </execution>
          <execution>
            <id>descriptors</id>
            <goals>
              <goal>spring-descriptor</goal>
              <goal>java-container</goal>
            </goals>
            <configuration>
              <moduleName>${pom.name}</moduleName>
              <encoding>UTF-8</encoding>
              <locale>en</locale>
              <factoryBean>org.jdtaus.core.container.ri.spring.ContainerFactoryBean</factoryBean>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <dependencies>
          <dependency>
            <artifactId>jdtaus-container-mojo</artifactId>
            <groupId>org.jdtaus.mojo</groupId>
            <version>3.0</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <artifactId>jdtaus-core-client-container</artifactId>
            <groupId>org.jdtaus.core.container</groupId>
            <version>[1.5,)</version>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resource>META-INF/MANIFEST.MF</resource>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resource>META-INF/*.SF</resource>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resource>META-INF/*.DSA</resource>
                </transformer>
                <transformer implementation="org.jdtaus.core.container.mojo.ContainerResourceTransformer">
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <artifactId>jdtaus-core-api</artifactId>
      <groupId>org.jdtaus.common</groupId>
      <version>1.5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-client-container</artifactId>
      <groupId>org.jdtaus.core.container</groupId>
      <version>1.5-1</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-servlet-container</artifactId>
      <groupId>org.jdtaus.core.container</groupId>
      <version>1.1</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-memory-manager</artifactId>
      <groupId>org.jdtaus.core.lang</groupId>
      <version>1.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-jdk-logging</artifactId>
      <groupId>org.jdtaus.core.logging</groupId>
      <version>1.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-application-logger</artifactId>
      <groupId>org.jdtaus.core.text</groupId>
      <version>1.3</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-task-monitor</artifactId>
      <groupId>org.jdtaus.core.monitor</groupId>
      <version>1.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-jdk14-executor</artifactId>
      <groupId>org.jdtaus.core.lang</groupId>
      <version>1.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-entity-resolver</artifactId>
      <groupId>org.jdtaus.core.sax</groupId>
      <version>1.1</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-utilities</artifactId>
      <groupId>org.jdtaus.core</groupId>
      <version>1.4-1</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>jdtaus-core-messages</artifactId>
      <groupId>org.jdtaus.core</groupId>
      <version>1.2</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changes-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.jdtaus.mojo</groupId>
        <artifactId>jdtaus-container-mojo</artifactId>
        <version>3.0</version>
        <configuration>
          <moduleName>${pom.name}</moduleName>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>