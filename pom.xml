<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <parent>
    <artifactId>jdtaus-core</artifactId>
    <groupId>org.jdtaus</groupId>
    <version>1.0-alpha-4</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jdtaus.mojo</groupId>
  <artifactId>jdtaus-container-mojo</artifactId>
  <name>jDTAUS Mojo Container</name>
  <version>1.0-alpha-6</version>
  <packaging>maven-plugin</packaging>
  <description>Source generator for the container model.</description>
  <dependencies>
    <dependency>
      <groupId>org.jdtaus.common</groupId>
      <artifactId>jdtaus-core-api</artifactId>
      <version>RELEASE</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
    </dependency>
  </dependencies>
  <scm>
    <connection>scm:svn:https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-container-mojo/tags/1.0-alpha-6</connection>
    <developerConnection>scm:svn:https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-container-mojo/tags/1.0-alpha-6</developerConnection>
    <url>https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-container-mojo/tags/1.0-alpha-6</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>https://jdtaus.svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-container-mojo/tags</tagBase>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jdtaus.mojo</groupId>
        <artifactId>jdtaus-resource-mojo</artifactId>
        <version>RELEASE</version>
        <executions>
          <execution>
            <id>default</id>
            <goals>
              <goal>generate-bundles</goal>
            </goals>
            <configuration>
              <bundles>
                <bundle>org.jdtaus.core.container.mojo.AbstractSourceMojo</bundle>
                <bundle>org.jdtaus.core.container.mojo.ContainerMojo</bundle>
              </bundles>
              <encoding>UTF-8</encoding>
              <locale>en</locale>
              <javadoc>false</javadoc>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
        <updatePolicy>daily</updatePolicy>
      </snapshots>
      <id>jdtaus-releases</id>
      <name>jDTAUS Release Repository</name>
      <url>http://maven2-repository.jdtaus.org/repos/releases</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
        <updatePolicy>daily</updatePolicy>
      </snapshots>
      <id>jdtaus-releases</id>
      <name>jDTAUS Release Repository</name>
      <url>http://maven2-repository.jdtaus.org/repos/releases</url>
    </pluginRepository>
  </pluginRepositories>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <aggregate>false</aggregate>
          <author>true</author>
          <charset>UTF-8</charset>
          <docencoding>UTF-8</docencoding>
          <encoding>UTF-8</encoding>
          <doctitle>${pom.name} Specification ${pom.version}</doctitle>
          <linksource>true</linksource>
          <nodeprecated>true</nodeprecated>
          <quiet>true</quiet>
          <verbose>false</verbose>
          <serialwarn>true</serialwarn>
          <windowtitle>${pom.name} Specification ${pom.version}</windowtitle>
          <links>
            <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
            <link>http://www.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-api/apidocs</link>
          </links>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <sourceEncoding>UTF-8</sourceEncoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-plugin-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>
