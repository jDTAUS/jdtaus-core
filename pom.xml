<?xml version="1.0" encoding="UTF-8"?><project>
  <parent>
    <artifactId>jdtaus-core</artifactId>
    <groupId>org.jdtaus</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jdtaus.mojo</groupId>
  <artifactId>jdtaus-resource-mojo</artifactId>
  <packaging>maven-plugin</packaging>
  <name>jDTAUS Core Resource Mojo</name>
  <version>1.0-SNAPSHOT</version>
  <description>Source generator for resource bundles.</description>
  <scm>
    <connection>scm:svn:https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-resource-mojo/tags/jdtaus-core-1.0-alpha-1</connection>
    <developerConnection>scm:svn:https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-resource-mojo/tags/jdtaus-core-1.0-alpha-1</developerConnection>
    <url>http://svn.sourceforge.net/viewcvs.cgi/jdtaus/jdtaus-core/jdtaus-resource-mojo/tags/jdtaus-core-1.0-alpha-1</url>
  </scm>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.4</source>
            <target>1.4</target>
            <debug>true</debug>
            <encoding>UTF-8</encoding>
            <optimize>true</optimize>
            <showDeprecation>true</showDeprecation>
            <showWarnings>true</showWarnings>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-site-plugin</artifactId>
          <configuration>
            <outputEncoding>UTF-8</outputEncoding>
            <locales>en</locales>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <tagBase>https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-resource-mojo/tags</tagBase>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <configuration>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <tagBase>https://svn.sourceforge.net/svnroot/jdtaus/jdtaus-core/jdtaus-resource-mojo/tags</tagBase>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <aggregate>false</aggregate>
          <author>true</author>
          <charset>UTF-8</charset>
          <docencoding>UTF-8</docencoding>
          <encoding>UTF-8</encoding>
          <doctitle>${pom.name} Specification ${pom.version}</doctitle>
          <linksource>true</linksource>
          <nodeprecated>true</nodeprecated>
          <quiet>true</quiet>
          <verbose>false</verbose>
          <serialwarn>true</serialwarn>
          <showPackage>false</showPackage>
          <showPrivate>false</showPrivate>
          <showProtected>true</showProtected>
          <windowtitle>${pom.name} Specification ${pom.version}</windowtitle>
          <links>
            <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
            <link>http://www.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-api/apidocs</link>
          </links>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-plugin-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <sourceEncoding>UTF-8</sourceEncoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>