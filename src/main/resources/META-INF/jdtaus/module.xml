<jdtaus:module xmlns="http://jdtaus.org/runtime/container/xml"
               xmlns:jdtaus="http://jdtaus.org/runtime/container/xml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://jdtaus.org/runtime/container/xml http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-client-container/jdtaus-module.xsd"
               jdtaus:name="${pom.name}"
               jdtaus:description="${pom.description}"
               jdtaus:version="1.0">
  
  <jdtaus:specifications>
    <jdtaus:specification jdtaus:identifier="org.jdtaus.core.client.util.IconSet"
                          jdtaus:description="${pom.description}"
                          jdtaus:vendor="${organization.name}"
                          jdtaus:version="${pom.version}"
                          jdtaus:singleton="true"/>
    
  </jdtaus:specifications>
  
  <jdtaus:implementations>
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.core.client.util.spi.DefaultIconSet"
                           jdtaus:name="${pom.name}"
                           jdtaus:vendor="${organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.core.client.util.IconSet"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="configurationBundle"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="org/jdtaus/core/client/util/spi/DefaultIconSet"
                         jdtaus:api="true"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
    
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.core.io.util.MemoryFileOperations"
                           jdtaus:name="MemoryFileOperations"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name"
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.core.io.util.MemoryFileOperations"
                             jdtaus:api="true"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="MemoryManager"
                           jdtaus:bound="true"/>
        
      </jdtaus:dependencies>
      
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="bufferSize"
                         jdtaus:type="int"
                         jdtaus:value="65535"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
    
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.core.io.util.RandomAccessFileOperations"
                           jdtaus:name="RandomAccessFileOperations"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="bufferSize"
                         jdtaus:type="int"
                         jdtaus:value="65535"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
    
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.core.io.util.StructuredFileOperations"
                           jdtaus:name="StructuredFileOperations"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="MemoryManager"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="TaskMonitor"
                           jdtaus:bound="true"/>
        
      </jdtaus:dependencies>
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="blockSize"
                         jdtaus:type="int"
                         jdtaus:value="1"
                         jdtaus:api="true"/>
        
        <jdtaus:property jdtaus:name="readAhead"
                         jdtaus:type="int"
                         jdtaus:value="6"/>
        
        <jdtaus:property jdtaus:name="minBufferedBlocks"
                         jdtaus:type="int"
                         jdtaus:value="1024"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
    
  </jdtaus:implementations>
</jdtaus:module>
