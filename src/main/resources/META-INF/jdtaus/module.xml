<module:module xmlns:container="http://jdtaus.org/core/model/container"
               xmlns:module="http://jdtaus.org/core/model/container/module"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://jdtaus.org/core/model/container/module http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-client-container/xsd/jdtaus-module-1.2.xsd
                                   http://jdtaus.org/core/model/container http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-api/xsd/jdtaus-container-1.0.xsd"
               container:name="${pom.name}"
               container:description="${pom.description}"
               container:version="${pom.version}"
               module:modelVersion="1.2">

  <container:specifications>
    <container:specification container:identifier="org.jdtaus.core.lang.util.ExceptionMessageResolver"
                             container:description="${pom.description}"
                             container:vendor="${pom.organization.name}"
                             container:version="${pom.version}"
                             container:singleton="true"
                             container:multiplicity="many"/>

  </container:specifications>
  <container:implementations>
    <container:implementation container:identifier="org.jdtaus.core.io.util.MemoryFileOperations"
                              container:name="MemoryFileOperations"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.io.util.MemoryFileOperations"
                                container:api="true"/>

          </container:properties>
        </container:dependency>

        <container:dependency container:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                              container:name="MemoryManager"
                              container:bound="true"/>

      </container:dependencies>

      <container:properties>
        <container:property container:name="bufferSize"
                            container:type="int"
                            container:value="65535"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.io.util.RandomAccessFileOperations"
                              container:name="RandomAccessFileOperations"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                              container:name="MemoryManager"
                              container:bound="true"/>

      </container:dependencies>

      <container:properties>
        <container:property container:name="bufferSize"
                            container:type="int"
                            container:value="65535"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.io.util.StructuredFileOperations"
                              container:name="StructuredFileOperations"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                              container:name="MemoryManager"
                              container:bound="true"/>

        <container:dependency container:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                              container:name="TaskMonitor"
                              container:bound="true"/>

      </container:dependencies>
      <container:properties>
        <container:property container:name="blockSize"
                            container:type="int"
                            container:value="1"
                            container:api="true"/>

        <container:property container:name="minBufferedBlocks"
                            container:type="int"
                            container:value="1024"/>

        <container:property container:name="monitoringThreshold"
                            container:type="int"
                            container:value="5242880"
                            container:api="true"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.io.util.CoalescingFileOperations"
                              container:name="CoalescingFileOperations"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                              container:name="MemoryManager"
                              container:bound="true"/>

        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.io.util.CoalescingFileOperations"
                                container:api="true"/>

          </container:properties>
        </container:dependency>
      </container:dependencies>
      <container:properties>
        <container:property container:name="blockSize"
                            container:type="int"
                            container:value="2097152"
                            container:api="true"/>

        <container:property container:name="cacheSize"
                            container:type="int"
                            container:value="5"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.io.util.ReadAheadFileOperations"
                              container:name="ReadAheadFileOperations"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                              container:name="MemoryManager"
                              container:bound="true"/>

      </container:dependencies>
      <container:properties>
        <container:property container:name="cacheSize"
                            container:type="int"
                            container:value="16384"
                            container:api="true"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.monitor.util.SwingProgressMonitor"
                              container:name="ProgressMonitor"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.monitor.util.SwingProgressMonitor"
                                container:api="true"/>

          </container:properties>
        </container:dependency>
      </container:dependencies>
      <container:properties>
        <container:property container:name="millisToDecideToPopup"
                            container:type="int"
                            container:value="500"
                            container:api="true"/>

        <container:property container:name="millisToPopup"
                            container:type="int"
                            container:value="2000"
                            container:api="true"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.text.util.SwingMessagePane"
                              container:name="SwingMessagePane"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.text.util.SwingMessagePane"
                                container:api="true"/>

          </container:properties>
        </container:dependency>
      </container:dependencies>
      <container:properties>
        <container:property container:name="maximumMessages"
                            container:type="int"
                            container:value="25"
                            container:api="true"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.monitor.util.TaskDurationLogger"
                              container:name="TaskDurationLogger"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.monitor.util.TaskDurationLogger"
                                container:api="true"/>

          </container:properties>
        </container:dependency>
      </container:dependencies>
      <container:properties>
        <container:property container:name="loggingThresholdMillis"
                            container:type="long"
                            container:value="60000"
                            container:api="true"/>

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.text.util.MessageLogger"
                              container:name="MessageLogger"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.text.util.MessageLogger"
                                container:api="true"/>

          </container:properties>
        </container:dependency>
      </container:dependencies>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.swing.util.BlockingGlassPane"
                              container:name="BlockingGlassPane"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:properties>
        <container:property container:name="cursorType"
                            container:type="int"
                            container:value="3"/> <!-- Cursor.WAIT_CURSOR -->

      </container:properties>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.lang.util.ExceptionMessageProducer"
                              container:name="ExceptionMessageProducer"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.text.spi.ApplicationLogger"
                              container:name="ApplicationLogger"
                              container:bound="true"/>

      </container:dependencies>
    </container:implementation>

    <container:implementation container:identifier="org.jdtaus.core.lang.util.ExceptionLogger"
                              container:name="ExceptionLogger"
                              container:vendor="${pom.organization.name}"
                              container:version="${pom.version}"
                              container:final="true">

      <container:dependencies>
        <container:dependency container:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                              container:name="Logger"
                              container:bound="true">

          <container:properties>
            <container:property container:name="name"
                                container:type="java.lang.String"
                                container:value="org.jdtaus.core.lang.util.ExceptionLogger"
                                container:api="true"/>

          </container:properties>
        </container:dependency>
      </container:dependencies>
    </container:implementation>

  </container:implementations>
</module:module>
