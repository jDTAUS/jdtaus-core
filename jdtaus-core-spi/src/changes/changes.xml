<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>Changelog</title>
    <author email="schulte2005@users.sourceforge.net">Christian Schulte
    </author>
  </properties>
  <body>
    <release version="1.0" date="2007-06-01"
             description="First stable release."/>
    <release version="1.1" date="2007-08-01"
             description="Maintainance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated the XML module descriptor to the 1.1 model version.
      Added setter for property <code>progressDescription</code> to class
      <code>org.jdtaus.core.monitor.spi.Task</code> added in the 1.2 API.]]>
      </action>
    </release>
    <release version="1.2" date="2007-11-03"
             description="Feature enhancements.">
      <action dev="schulte2005" type="update"><![CDATA[
      Added<ul>
      <li><code>org.jdtaus.core.lang.spi.Executor</code></li>
      </ul> providing the <code>ExceptionEventSource</code> introduced in the
      1.4 API.]]>
      </action>
    </release>
    <release version="1.3" date="2007-12-26"
             description="Feature enhancements.">
      <action dev="schulte2005" type="update"><![CDATA[
      Added classes<ul>
      <li><code>org.jdtaus.core.lang.spi.ExceptionHandler</code></li><blockquote>
      as an interface for implementations to handle exceptions.</blockquote></ul>]]>
      </action>
    </release>
    <release version="1.3.1" date="2008-03-10"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated to latest mojo releases.]]>
      </action>
    </release>
    <release version="1.3.2" date="2008-07-04"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Maven POM updates.]]>
      </action>
    </release>
    <release version="1.3.3" date="2008-07-13"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated module descriptor to 1.2 model version.]]>
      </action>
    </release>
    <release version="1.5" date="2008-10-27"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated module descriptor to 1.3 model version.]]>
      </action>
      <action dev="schulte2005" type="update"><![CDATA[
      Made version match corresponding API version (skipped 1.4).]]>
      </action>
    </release>
    <release version="1.6" date="2008-10-30"
             description="Maintenance release.">
      <action dev="schulte2005" type="fix"><![CDATA[
      Udated<ul>
      <li><code>org.jdtaus.core.monitor.spi.Task</code><blockquote>
      Synchronized access to a task's state correcting a long standing sporadic
      <code>IllegalStateException</code> thrown by the default task monitor
      implementation.</blockquote></li></ul>]]>
      </action>
    </release>
    <release version="1.8" date="2008-12-28"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Udated<ul>
      <li><code>org.jdtaus.core.lang.spi.ExceptionHandler</code><blockquote>
      Deprecated method <code>getExceptionEvents()</code>.</blockquote></li></ul>]]>
      </action>
    </release>
    <release version="1.9" date="2009-07-02"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated any references to the jDTAUS server to point to the SF.net
      servers.]]></action>
      <action dev="schulte2005" type="fix"><![CDATA[
      Corrected GPG signatures.]]></action>
    </release>
    <release version="1.9.1" date="2009-11-09"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Maven POM updates.]]></action>
    </release>
    <release version="1.10" date="2009-11-11"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Maven POM updates.]]></action>
    </release>
  </body>
