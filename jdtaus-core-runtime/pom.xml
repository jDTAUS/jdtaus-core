                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.logging</groupId>
                        <artifactId>jdtaus-core-commons-logging</artifactId>
                        <classifier>project</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/src</outputDirectory>
                      </artifactItem>

                      <artifactItem>
                        <groupId>org.jdtaus.core.container</groupId>
                        <artifactId>jdtaus-core-jomc-container</artifactId>
                        <classifier>site</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.container</groupId>
                        <artifactId>jdtaus-core-servlet-container</artifactId>
                        <classifier>site</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.logging</groupId>
                        <artifactId>jdtaus-core-log4j-logging</artifactId>
                        <classifier>site</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.logging</groupId>
                        <artifactId>jdtaus-core-slf4j-logging</artifactId>
                        <classifier>site</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.logging</groupId>
                        <artifactId>jdtaus-core-commons-logging</artifactId>
                        <classifier>site</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>

                      <artifactItem>
                        <groupId>org.jdtaus.core.container</groupId>
                        <artifactId>jdtaus-core-jomc-container</artifactId>
                        <classifier>javadoc</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.container</groupId>
                        <artifactId>jdtaus-core-servlet-container</artifactId>
                        <classifier>javadoc</classifier>
                        <type>jar</type>
                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.logging</groupId>
                        <artifactId>jdtaus-core-log4j-logging</artifactId>
                        <classifier>javadoc</classifier>
