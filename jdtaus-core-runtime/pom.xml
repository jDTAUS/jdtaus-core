                        <outputDirectory>${project.build.directory}/dependency/doc</outputDirectory>
                      </artifactItem>
                      <artifactItem>
                        <groupId>org.jdtaus.core.logging</groupId>
                        <artifactId>jdtaus-core-slf4j-logging</artifactId>
                        <classifier>javadoc</classifier>
