    <release version="1.0" date="2007-08-01"
             description="First stable release."/>
    <release version="1.0.1" date="2007-08-24"
             description="Maintenance release.">
      <action dev="schulte2005" type="update"><![CDATA[
      Updated classes<ul>
      <li><code>org.jdtaus.core.messages.ExceptionMessage</code>:<blockquote>
      to always report the root cause of any throwable an instance got created
      with and to differentiate between errors and exceptions when constructing
      the default message text.</blockquote></li></ul>]]>
      </action>
    </release>
    <release version="1.1" date="2007-11-04"
             description="Maintenance release.">
